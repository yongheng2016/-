/* pages/address/address.wxss */

.address-list-container {
    height: 100%;
}

.address-list::after {
    content: '占位';
    display: block;
    font-size: 18px;
    padding: 14px;
    background: transparent;
    color: transparent;
}

.address-item {
    /* border-bottom: 1px solid #ccc; *//* border-top: 1px solid #ccc; */
    padding: 0 16px;
    margin-bottom: 12px;
    background: #fff;
}

.item-info {
    border-bottom: 1px solid #ccc;
    padding: 10px 0;
}

.item-contact {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.item-operate {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.iconfont {
    font-size: 22px;
}

.icon-wrapper {
    position: relative;
}

.operate-default {
    display: flex;
    justify-content: center;
    align-items: center;
    vertical-align: top;
}

.icon-active {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.operate-text {
    margin-left: 2px;
}

.operate-wrapper {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 10px 0;
}

.item-edit {
    margin-right: 14px;
}

.add-btn {
    position: fixed;
    right: 0;
    left: 0;
    bottom: 0;
    background: #c136a9;
    color: #fff;
}

.btn {
    background: #c136a9;
    color: #fff;
    font-size: 18px;
    line-height: 1;
    padding: 14px 0;
}
