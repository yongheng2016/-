/* pages/personalCenter/personalCenter.wxss */
page {
    background: #fff;
}
.header {
    display: flex;
    align-items: center;
    padding: 20px 16px;
    font-size: 0;
    border-bottom: 1px solid #ccc;
}
.header .pic {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 18px;
}
.header .phone {
    font-size: 18px;
}
.order-btn {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1rpx solid #ccc;
}
.order-btn .order-btn-active {
    background: rgba(200,200,200,.1);
}
.order-btn .btn-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 4px 0; 
    border-radius: 6px;
}
.order-btn .btn-item .text {
    margin-top: 10px;
}
.personal-list .list-item {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 16px;
    border-bottom: 1rpx solid #ccc;
}
.personal-list .list-item-last {
    border: none;
}
.iconfont {
    font-size: 22px;
}
.list-item .iconfont {
    width: 34px;    }